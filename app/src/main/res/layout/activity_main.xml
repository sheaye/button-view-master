<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.sheaye.sample.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <com.sheaye.widget.ButtonView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:text="rectangle_button"
            app:shape="rectangle"
            app:cornerRadius="5dp"
            app:textColorEntries="@array/textColors"
            app:solidColorEntries="@array/solidColors"
            android:onClick="onClick"/>

        <com.sheaye.widget.ButtonView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:text="circle_rectangle_button"
            app:shape="circleRect"
            app:textColorEntries="@array/textColors"
            app:solidColorEntries="@array/solidColors"
            android:onClick="onClick"/>

        <com.sheaye.widget.ButtonView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:text="circle_button"
            app:shape="circle"
            android:gravity="center"
            app:textColorEntries="@array/textColors"
            app:solidColorEntries="@array/solidColors"
            android:onClick="onClick"/>

        <com.sheaye.widget.ButtonView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:text="button_with_stroke"
            app:shape="rectangle"
            app:cornerRadius="5dp"
            app:textColorEntries="@array/textColors"
            app:solidColorEntries="@array/solidColors"
            app:strokeWidth="2dp"
            app:strokeColorEntries="@array/strokeColors"
            android:onClick="onClick"/>

        <com.sheaye.widget.ButtonView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:text="LEFT"
            android:textSize="20sp"
            android:onClick="onClick"
            app:cornerRadius="5dp"
            app:solidColor="@android:color/darker_gray"
            app:textColorEntries="@array/textColors"
            app:compoundIconEntries="@array/drawables"
            app:compoundIconGravity="left"
            app:compoundPadding="10dp"/>

        <com.sheaye.widget.ButtonView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:text="TOP"
            android:textSize="20sp"
            app:cornerRadius="5dp"
            app:solidColor="@android:color/darker_gray"
            app:textColorEntries="@array/textColors"
            app:compoundIconEntries="@array/drawables"
            app:compoundIconGravity="top"
            android:onClick="onClick"
            app:compoundPadding="10dp"/>

        <com.sheaye.widget.ButtonView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:text="RIGHT"
            android:textSize="20sp"
            app:cornerRadius="5dp"
            app:solidColor="@android:color/darker_gray"
            app:textColorEntries="@array/textColors"
            app:compoundIconEntries="@array/drawables"
            app:compoundIconGravity="right"
            android:onClick="onClick"
            app:compoundPadding="10dp"/>

        <com.sheaye.widget.ButtonView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:text="BOTTOM"
            android:textSize="20sp"
            app:cornerRadius="5dp"
            app:solidColor="@android:color/darker_gray"
            app:textColorEntries="@array/textColors"
            app:compoundIconEntries="@array/drawables"
            app:compoundIconGravity="bottom"
            android:onClick="onClick"
            app:compoundPadding="10dp"/>

    </LinearLayout>


</ScrollView>
