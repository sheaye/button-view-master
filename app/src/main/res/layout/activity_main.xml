<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.sheaye.sample.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <com.sheaye.widget.ButtonView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:text="rectangle_button"
            app:shape="rectangle"
            app:cornerRadius="5dp"
            app:textColorEntries="@array/textColors"
            app:solidColorEntries="@array/solidColors"/>

        <com.sheaye.widget.ButtonView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:text="circle_rectangle_button"
            app:shape="circleRect"
            app:textColorEntries="@array/textColors"
            app:solidColorEntries="@array/solidColors"/>

        <com.sheaye.widget.ButtonView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:text="circle_button"
            app:shape="circle"
            android:gravity="center"
            app:textColorEntries="@array/textColors"
            app:solidColorEntries="@array/solidColors"/>

        <com.sheaye.widget.ButtonView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:text="button_with_stroke"
            app:shape="rectangle"
            app:cornerRadius="5dp"
            app:textColorEntries="@array/textColors"
            app:solidColorEntries="@array/solidColors"
            app:strokeWidth="1dp"
            app:strokeColorEntries="@array/strokeColors"/>

        <com.sheaye.widget.ButtonView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:text="compound_button"
            app:compoundIconEntries="@array/drawables"
            app:textColorEntries="@array/textColors"
            app:compoundIconGravity="left"/>

    </LinearLayout>


</ScrollView>
