<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:showIn="@layout/activity_button_view_with_xml">

    <TextView
        android:text="Shape"
        style="@style/TitleStyle" />

    <LinearLayout style="@style/LayoutStyle">

        <TextView
            android:text="Rectangle:"
            style="@style/LabelStyle" />

        <com.sheaye.widget.ButtonView
            app:shape="rectangle"
            style="@style/ButtonStyle" />
    </LinearLayout>

    <LinearLayout style="@style/LayoutStyle">

        <TextView
            style="@style/LabelStyle"
            android:text="RoundRectangle:" />

        <com.sheaye.widget.ButtonView
            style="@style/ButtonStyle"
            app:shape="rectangle"
            app:cornerRadius="5dp"
            app:solidColor="@color/colorAccent"
            android:textColor="@color/colorWhite"/>

    </LinearLayout>

    <LinearLayout style="@style/LayoutStyle">

        <TextView
            style="@style/LabelStyle"
            android:text="CircleRectangle:" />

        <com.sheaye.widget.ButtonView
            style="@style/ButtonStyle"
            app:shape="circleRect" />

    </LinearLayout>

    <LinearLayout style="@style/LayoutStyle">

        <TextView
            style="@style/LabelStyle"
            android:text="Circle:" />

        <com.sheaye.widget.ButtonView
            style="@style/ButtonStyle"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            app:shape="circle" />

    </LinearLayout>

</LinearLayout>